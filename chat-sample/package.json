{
    "name": "chat-sample",
    "publisher": "vscode-samples",
    "displayName": "Copilot Chat Sample",
    "description": "Sample chat extension, a trusty cat tutor that will can teach you computer science topics.",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-extension-samples"
    },
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "AI",
        "Chat"
    ],
    "activationEvents": [],
    "enabledApiProposals": [
        "chatVariableResolver",
        "chatParticipantAdditions",
        "lmTools"
    ],
    "contributes": {
        "chatParticipants": [
            {
                "id": "chat-sample.tools",
                "fullName": "Tool User",
                "name": "tools",
                "description": "I use tools",
                "isSticky": true,
                "supportsToolReferences": true
            }
        ],
        "languageModelTools": [
            {
                "id": "chat-sample_tabCount",
                "name": "tabCount",
                "displayName": "Tab Count",
                "modelDescription": "The number of active tabs in a tab group",
                "icon": "$(files)",
                "canBeInvokedManually": true,
                "parametersSchema": {
                    "type": "object",
                    "properties": {
                        "tabGroup": {
                            "type": "number",
                            "description": "The index of the tab group to check. This is optional- if not specified, the active tab group will be checked.",
                            "default": 0
                        }
                    }
                }
            },
            {
                "id": "chat-sample_catVoice",
                "name": "catVoice",
                "displayName": "Cat Voice",
                "modelDescription": "Speak in a cat voice",
                "userDescription": "Speak in a cat voice",
                "icon": "$(files)",
                "canBeInvokedManually": true
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.5.9",
        "@types/vscode": "^1.90.0",
        "@vscode/prompt-tsx": "^0.2.7-alpha",
        "eslint": "^7.22.0",
        "run-script-os": "^1.1.6",
        "tslint": "^6.1.3",
        "typescript": "^4.0.3"
    }
}
